<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/bg">

    <TextView
        android:id="@+id/operation"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:textSize="48sp"
        android:textColor="#FFFFFF"
        android:background="@color/bg"
        android:maxLength="12"
        android:padding="20dp"
        android:gravity="end|bottom|center_vertical"
        android:text="0"/>

<!--    Row 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/bg"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="onClickAny"/>
        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="onClickAny"/>
        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="onClickAny"/>
        <Button
            android:id="@+id/bDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="doAO"/>
    </LinearLayout>

<!--    Row 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:background="@color/bg"
        >

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="onClickAny"/>
        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="onClickAny"/>
        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="onClickAny"/>
        <Button
            android:id="@+id/bMul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="doAO"/>
    </LinearLayout>

<!--    Row 3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:background="@color/bg"
        >

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="onClickAny"/>
        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="onClickAny"/>
        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="onClickAny"/>
        <Button
            android:id="@+id/bAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="doAO"/>
    </LinearLayout>


<!--    Row 4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:background="@color/bg"
        >

        <Button
            android:id="@+id/bClr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Clr"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="clr"/>

        <Button
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="onClickAny"/>

        <Button
            android:id="@+id/b."
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="doDot"/>

        <Button
            android:id="@+id/bSub"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="doAO"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:background="@color/bg">

        <Button
            android:id="@+id/bEq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20sp"
            android:layout_margin="2dp"
            android:onClick="onEqual"/>


    </LinearLayout>


</LinearLayout>